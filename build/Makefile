#******************************************************************************#
#******************************************************************************#
#* 設定                                                                       *#
#******************************************************************************#
# ディスクイメージファイル
DISK_IMG    = mochi.img

# booter
BOOTER_IPL  = obj/booter/booter-ipl.bin
BOOTER_MAIN = obj/booter/booter-main.bin

# kernel
KERNEL      = obj/kernel/kernel

# OS
OS_IMG      = os.img


#******************************************************************************#
#* phonyターゲット                                                            *#
#******************************************************************************#
# コンパイル
.PHONY: all
all:
	make -C ../src/ all

# 全生成ファイルの削除
.PHONY: clean
clean:
	make -C ../src/ clean
	-rm -f $(DISK_IMG)
	-rm -f $(OS_IMG)
	-rm -rf obj

# ディスクイメージの作成
.PHONY: image
image: $(DISK_IMG)


#******************************************************************************#
#* イメージファイル作成                                                       *#
#******************************************************************************#
$(DISK_IMG): all
	tools/makeimg  -o $(OS_IMG) -K $(KERNEL)
	tools/makedisk -o $@ -i $(BOOTER_IPL) -b $(BOOTER_MAIN) -k $(OS_IMG)
	sync

#******************************************************************************#
