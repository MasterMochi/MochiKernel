#******************************************************************************#
#* マクロ設定                                                                 *#
#******************************************************************************#
# Doxygenコンフィグ
CONFIG_PATH = ./doxygen.cnf

# Doxygenログ
LOG_DIR  = ./log/
LOG_PATH = ./log/warn.log


#******************************************************************************#
#* phonyターゲット                                                            *#
#******************************************************************************#
# サブディレクトリも含めたコンパイル
.PHONY: all
all: $(CONFIG_FILE)
	mkdir   -p $(LOG_DIR)
	doxygen $(CONFIG_PATH)
	cat     $(LOG_PATH)

# 全生成ファイルの削除
.PHONY: clean
clean:
	-rm -rf $(LOG_DIR)
	-rm -rf output/


#******************************************************************************#
