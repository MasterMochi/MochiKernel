#******************************************************************************#
#* マクロ設定                                                                 *#
#******************************************************************************#
# サブディレクトリ
SUB_DIRS = booter \
           kernel


#******************************************************************************#
#* phonyターゲット                                                            *#
#******************************************************************************#
# サブディレクトリも含めたコンパイル
.PHONY: all
all:
ifdef SUB_DIRS
	@for subdir in $(SUB_DIRS); \
	do \
	    $(MAKE) -C $$subdir all; \
	done
endif

# 全生成ファイルの削除
.PHONY: clean
clean:
ifdef SUB_DIRS
	@for subdir in $(SUB_DIRS); \
	do \
	    $(MAKE) -C $$subdir clean; \
	done
endif


#******************************************************************************#
