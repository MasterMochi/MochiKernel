#******************************************************************************#
#* 設定                                                                       *#
#******************************************************************************#
# イメージ
IMG = ../../build/disk.img


#******************************************************************************#
#* phonyターゲット                                                            *#
#******************************************************************************#
# qemu実行(オプション無し)
.PHONY: run
run:
	qemu-system-i386 -drive file=$(IMG),format=raw -monitor stdio

# qemu実行(curses)
.PHONY: run-curses
run-curses:
	qemu-system-i386 -drive file=$(IMG),format=raw -curses -monitor stdio

# qemu実行(vnc)
.PHONY: run-vnc
run-vnc:
	qemu-system-i386 -drive file=$(IMG),format=raw -vnc :0 -monitor stdio


#******************************************************************************#
